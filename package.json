{
  "name": "swiftsell-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts ",
    "prod": "node dist/server.js",
    "start": "node dist/server.js",
    "build": "tsc",
    "lint": "npx eslint . --ignore-pattern './dist/*'",
    "fix": "eslint src --fix",
    "clean-install": "rmdir /s /q node_modules && del yarn.lock && yarn",
    "commit": "eslint src --fix && tsc && git add . && git-cz && git push",
    "sync": "git pull origin develop && git push && yarn",
    "format": "prettier --write \"src/**/*.ts\"",
    "postinstall": "yarn install && yarn  build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "nodemailer": "^6.9.16",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^6.4.17",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
